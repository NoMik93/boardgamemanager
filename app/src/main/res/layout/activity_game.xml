<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:padding="5dp">

        <TextView android:id="@+id/textview_game_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="12pt"/>

        <TextView android:id="@+id/textview_game_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="10pt"/>

        <ImageButton android:id="@+id/button_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_live_help_black_24dp"
            android:background="@android:color/white"/>

    </LinearLayout>

    <FrameLayout android:id="@+id/game_fragment_frame"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9" />

</LinearLayout>
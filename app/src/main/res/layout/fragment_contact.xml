<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ListView android:id="@+id/listView_contact_selected"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:dividerHeight="10dp"
        android:divider="#00000000">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:background="@android:color/white"
        android:layout_margin="10dp">

        <ImageButton android:id="@+id/button_contact_add_from_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/button_contact_add_from_contact"
            android:scaleType="fitCenter"
            android:background="@android:color/white"/>

        <ImageButton android:id="@+id/button_contact_add_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_person_pin_black_24dp"
            android:scaleType="fitCenter"
            android:background="@android:color/white"/>

        <ImageButton android:id="@+id/button_contact_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_remove_circle_black_24dp"
            android:scaleType="fitCenter"
            android:background="@android:color/white"/>

        <ImageButton android:id="@+id/button_contact_complete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:scaleType="fitCenter"
            android:background="@android:color/white"/>

    </LinearLayout>
</LinearLayout>
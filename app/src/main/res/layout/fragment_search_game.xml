<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16"
    android:paddingHorizontal="10dp"
    android:background="@android:color/white">

    <TextView android:id="@+id/search_game_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="15pt"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_round"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView android:id="@+id/search_game_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="6"
            android:paddingHorizontal="5dp"
            android:paddingTop="15dp"
            android:orientation="vertical">
            <TextView android:id="@+id/search_game_year"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:gravity="left"/>
            <TextView android:id="@+id/search_game_playtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:gravity="left"/>
            <TextView android:id="@+id/search_game_player"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:gravity="left"/>
            <TextView android:id="@+id/search_game_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:gravity="left"/>
            <TextView android:id="@+id/search_game_publisher"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:gravity="left"/>
            <ImageButton android:id="@+id/search_game_start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:src="@drawable/button_search_game_start"
                android:scaleType="centerCrop"
                android:background="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8"
        android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="게임 설명:"
            android:textSize="10pt"
            android:gravity="center_vertical"/>
        <ImageButton android:id="@+id/buttonDescriptionEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/button_edit"
            android:background="@android:color/white"/>
    </LinearLayout>
    <TextView android:id="@+id/search_game_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:padding="5dp"
        android:textSize="9pt"
        android:scrollbars="vertical"/>
    
</LinearLayout>
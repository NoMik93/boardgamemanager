<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="right">
            <ImageButton android:id="@+id/imageButton_gaming_time"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pause_black_24dp"
                android:background="@android:color/transparent"/>
            <TextView android:id="@+id/textView_gaming_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15pt"
                android:padding="5dp"/>

            <ImageButton android:id="@+id/addTracker"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_playlist_add_black_24dp"
                android:background="@android:color/transparent"/>

            <ImageButton android:id="@+id/removeTracker"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delete_black_24dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <ListView android:id="@+id/listView_gaming_tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:divider="@color/place_autocomplete_separator"
            android:dividerHeight="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="주사위 굴리기"
                android:textSize="12pt"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button android:id="@+id/Button_gaming_dice_eye_minus5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="-5"/>

                        <Button android:id="@+id/Button_gaming_dice_eye_minus1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="-1"/>

                        <TextView android:id="@+id/TextView_gaming_dice_eye"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="눈의 수"/>

                        <Button android:id="@+id/Button_gaming_dice_eye_plus1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="+1"/>

                        <Button android:id="@+id/Button_gaming_dice_eye_plus5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="+5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <Button android:id="@+id/Button_gaming_dice_minus5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="-5"/>

                        <Button android:id="@+id/Button_gaming_dice_minus1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="-1"/>

                        <TextView android:id="@+id/TextView_gaming_dice"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="굴릴 개수"/>

                        <Button android:id="@+id/Button_gaming_dice_plus1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="+1"/>

                        <Button android:id="@+id/Button_gaming_dice_plus5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12pt"
                            android:padding="5dp"
                            android:text="+5"/>
                    </LinearLayout>
                </LinearLayout>
                <Button android:id="@+id/Button_gaming_dice_roll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="12pt"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/BluesColorPalette_3"
                    android:text="굴리기"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="동전 던지기"
                android:textSize="12pt"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:weightSum="7">

                <Button android:id="@+id/Button_gaming_coin_minus5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:text="-5"/>

                <Button android:id="@+id/Button_gaming_coin_minus1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:text="-1"/>

                <TextView android:id="@+id/TextView_gaming_coin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="던질 개수"/>

                <Button android:id="@+id/Button_gaming_coin_plus1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:text="+1"/>

                <Button android:id="@+id/Button_gaming_coin_plus5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:text="+5"/>

                <Button android:id="@+id/Button_gaming_coin_toss"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="12pt"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/BluesColorPalette_3"
                    android:text="던지기"/>

            </LinearLayout>
        </LinearLayout>

        <Button android:id="@+id/Button_gaming_complete"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:textSize="15pt"
            android:background="@color/BluesColorPalette_2"
            android:textColor="@color/colorWhite"
            android:text="게임 종료"/>
    </LinearLayout>
</ScrollView>
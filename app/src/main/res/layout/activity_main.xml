<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:background="@color/colorWhite"
        android:weightSum="10">

        <ImageButton android:id="@+id/button_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@color/tranceparent"
            android:src="@drawable/ic_person_black_24dp"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/tranceparent"
            android:scaleType="centerInside"
            android:layout_marginVertical="5dp"
            android:src="@drawable/logo"/>

        <ImageButton android:id="@+id/button_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@color/tranceparent"
            android:src="@drawable/ic_live_help_black_24dp"/>

    </LinearLayout>

    <FrameLayout android:id="@+id/fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/button_search_selected"
            android:onClick="onClickMenuButton"
            android:background="@android:color/white"/>

        <ImageButton android:id="@+id/button_game"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/button_game_unselected"
            android:onClick="onClickMenuButton"
            android:background="@android:color/white"/>

        <ImageButton android:id="@+id/button_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/button_map_unselected"
            android:onClick="onClickMenuButton"
            android:background="@android:color/white"/>
    </LinearLayout>

</LinearLayout>